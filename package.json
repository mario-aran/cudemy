{
  "name": "cudemy",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:frontend": "pnpm --filter ./frontend/* -r --parallel run dev",
    "dev:services": "pnpm --filter ./services/* -r --parallel run dev",
    "build": "pnpm -r --parallel run build",
    "preview:frontend": "pnpm --filter ./frontend/* -r --parallel run preview",
    "start:services": "pnpm --filter ./services/* -r --parallel run start",
    "clean": "find . -type d \\( -name 'node_modules' -o -name 'dist' -o -name 'coverage' \\) -prune -exec rm -rf {} +",
    "format:eol": "find . -type f -exec dos2unix {} +",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "typecheck": "pnpm -r --parallel run typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript-eslint": "^8.50.1"
  }
}
